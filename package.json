{
  "name": "video-progress-tracker",
  "private": true,
  "scripts": {
    "dev": "concurrently -n api,web \"cd apps/api && npm run dev\" \"cd apps/web && npm run dev\"",
    "dev:api": "cd apps/api && npm run dev",
    "dev:web": "cd apps/web && npm run dev",
    "build": "pnpm -r build",
    "db:generate": "pnpm --filter api exec prisma generate",
    "db:push": "pnpm --filter api exec prisma db push",
    "db:studio": "pnpm --filter api exec prisma studio"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@9.0.0"
}
