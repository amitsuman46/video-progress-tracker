# ---- Required ----
# Database (SQLite file path)
DATABASE_URL="file:./prisma/dev.db"

# Firebase project (same as your web app). Used for token verification.
FIREBASE_PROJECT_ID="your-firebase-project-id"

# Firebase/Google service account (pick one):
# Option A: Path to JSON key file (e.g. from Firebase Console → Project settings → Service accounts → Generate new key)
GOOGLE_APPLICATION_CREDENTIALS="./service-account.json"
# Option B: Inline JSON (paste the entire contents of the key file as one line, or use a single line with \n for newlines)
# FIREBASE_SERVICE_ACCOUNT_JSON='{"type":"service_account","project_id":"...", ...}'

# ---- Optional ----
PORT=3001
NODE_ENV=development

# Admin: comma-separated Firebase UIDs that can call /api/admin/* (sync, etc.)
ADMIN_UIDS="uid1,uid2"

# If you use a separate key for Drive API (same file often works for both Firebase Admin and Drive):
# GOOGLE_SERVICE_ACCOUNT_JSON='{"type":"service_account", ...}'
